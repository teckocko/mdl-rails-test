<div class="mdl-cell mdl-cell--12-col mdl-cell--hide-tablet mdl-cell--hide-phone">
  <p id="notice"><%= notice %></p>
</div>


<!-- Square card -->
<style>
    .demo-card-square.mdl-card {
        height: 600px;
    }
    .demo-card-square > .mdl-card__title {
        color: #fff;
    }
</style>

<div class="mdl-cell mdl-cell--stretch">
  <div class="mdl-card mdl-shadow--2dp demo-card-wide demo-card-square ">
    <div class="mdl-card__title mdl-card--expand" style="background:
            url('<%= @post.picture %>') center / cover;">
      <h2 class="mdl-card__title-text"><%= @post.user_id %></h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= @post.content %>
    </div>
    <div class="mdl-card__actions mdl-card--border">

      <%= link_to 'Edit', edit_post_path(@post),class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %> |
      <%= link_to 'Back', posts_path,class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
    </div>
  </div>
</div>


