
<!-- Square card -->
<style>
    .demo-card-square.mdl-card {
        min-width: 240px;
        min-height: 320px;
    }
    .demo-card-square > .mdl-card__title {
        color: #fff;

    }
</style>

<div class="mdl-card mdl-shadow--2dp demo-card-square mdl-cell mdl-cell--3-col">
  <div class="mdl-card__title mdl-card--expand" style="background:
          url('<%= post.picture %>') bottom right 15% no-repeat #46B6AC;">
    <h2 class="mdl-card__title-text"><%= post.user_id %></h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= post.content %>

  </div>
  <div class="mdl-card__actions mdl-card--border">
    <%= link_to 'Show', post, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
    <%= link_to 'Edit', edit_post_path(post), class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %> |
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"%>
  </div>
</div>